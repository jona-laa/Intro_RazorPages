@page
@model IndexModel
@{
    ViewData["Title"] = "Startsidan";
}

<div class="container page-content">
    <h1>Välkommen!</h1>

    <section class="wrapper">
        <h2>Puzzle time!</h2>
        <label for="toggle_audio" class="switch">
            <span class="label-name">sound</span>
            <input type="checkbox" name="toggle_audio" id="toggle_audio" onclick="toggleSound()" checked>
            <span class="slider"></span>
        </label>
    
        <div class="puzzle">
            <div class="tile_1" id="c1r1" onClick="swap(1,1)"></div>
            <div class="tile_2" id="c2r1" onClick="swap(2,1)"></div>
            <div class="tile_3" id="c3r1" onClick="swap(3,1)"></div>
            <div class="tile_4" id="c4r1" onClick="swap(4,1)"></div>
            <div class="tile_5" id="c1r2" onClick="swap(1,2)"></div>
            <div class="tile_6" id="c2r2" onClick="swap(2,2)"></div>
            <div class="tile_7" id="c3r2" onClick="swap(3,2)"></div>
            <div class="tile_8" id="c4r2" onClick="swap(4,2)"></div>
            <div class="tile_9" id="c1r3" onClick="swap(1,3)"></div>
            <div class="tile_10" id="c2r3" onClick="swap(2,3)"></div>
            <div class="tile_11" id="c3r3" onClick="swap(3,3)"></div>
            <div class="tile_12" id="c4r3" onClick="swap(4,3)"></div>
            <div class="tile_13" id="c1r4" onClick="swap(1,4)"></div>
            <div class="tile_14" id="c2r4" onClick="swap(2,4)"></div>
            <div class="tile_15" id="c3r4" onClick="swap(3,4)"></div>
            <div class="tile_16" id="c4r4" onClick="swap(4,4)"></div>
        </div>
    </section>
</div>